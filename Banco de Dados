CREATE TABLE CLIENTE 
(ID_USUARIO           NUMBER(7) NOT NULL,
NOME_USUARIO          VARCHAR2(30) NOT NULL,
SENHA_USUARIO         VARCHAR2(30) NOT NULL,
NOME_COMPLETO         VARCHAR2(50) NOT NULL,
EMAIL                 VARCHAR2(50) NOT NULL,
TELEFONE              NUMBER(11) NOT NULL,
CPF                   VARCHAR2(11) NOT NULL,
END_LOGRAD            VARCHAR2(50) NOT NULL,
END_NUMERO            VARCHAR2(10) NOT NULL,E
END_COMPL             VARCHAR2(20),
END_CEP               NUMBER(08) NOT NULL,
END_BAIRRO            VARCHAR2(30),
END_CIDADE            VARCHAR2(40),
END_UF                CHAR(02),
CONSTRAINT            CLIENTE_ID_USUARIO_PK PRIMARY KEY (ID_USUARIO),
CONSTRAINT            CLIENTE_EMAIL_UK UNIQUE (EMAIL),
CONSTRAINT            CLIENTE_END_UF_CK CHECK(end_uf IN ('SP','RJ','MG')));


CREATE TABLE RASTREAMENTO 
(COD_RASTREIO        VARCHAR2(10) NOT NULL,
TIPO_ENVIO           VARCHAR2(20) NOT NULL,
END_ATUAL            VARCHAR2(50) NOT NULL,
DATA_ENTREGA         DATE,
CONSTRAINT           RASTREAMENTO_COD_RASTREIO_PK PRIMARY KEY (COD_RASTREIO));

CREATE TABLE PEDIDO
(NUM_PEDIDO           NUMBER(10) NOT NULL,
ID_USUARIO            NUMBER(7) NOT NULL,
DATA_CRIACAO          DATE,
DATA_ENVIO            DATE,
FRETE                 NUMBER(4,2),
VALOR_TOTAL           NUMBER(7,2) NOT NULL,
COD_RASTREIO          VARCHAR2(10),
CONSTRAINT            PEDIDO_NUM_PEDIDO_PK PRIMARY KEY (NUM_PEDIDO),
CONSTRAINT            PEDIDO_ID_USUARIO_FK FOREIGN KEY (ID_USUARIO)
                      REFERENCES CLIENTE (ID_USUARIO),
CONSTRAINT            PEDIDO_COD_RASTREIO_FK FOREIGN KEY(COD_RASTREIO)
                      REFERENCES RASTREAMENTO (COD_RASTREIO));


CREATE TABLE PRODUTOS
(COD_PRODUTO         NUMBER(10) NOT NULL,
NOME_PRODUTO         VARCHAR2(50) NOT NULL,
PRECO                NUMBER(7,2) NOT NULL,
UNIDADE_ESTOQUE      NUMBER(5) NOT NULL,
CONSTRAINT           PRODUTOS_COD_PRODUTO_PK PRIMARY KEY (COD_PRODUTO));


CREATE TABLE ADM_SITE
(COD_ADM             NUMBER(7) NOT NULL,
NOME_COMPLETO        VARCHAR2(50) NOT NULL,
EMAIL                VARCHAR2(50) NOT NULL,
NOME_USUARIO         VARCHAR2(20) NOT NULL,
SENHA                VARCHAR2(20) NOT NULL,
CONSTRAINT           ADM_SITE_COD_ADM_PK PRIMARY KEY (COD_ADM));
